<div class="container">
<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" , class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div>
    <%= form.label :description, style: "display: block", class: "form-label" %>
    <%= form.text_area :description, class: "form-control", required: true  %>
  </div>

  <div class="mb-3">
    <%= form.label :image, class: "form-label" %> <br>
    <%= form.file_field :image , class: "form-control"%>
  </div>

  <div>
    <%= form.submit "Create Post" , class: "form-control bg-success"%>
  </div>
<% end %>
</div>